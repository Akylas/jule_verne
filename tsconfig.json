{
    "compilerOptions": {
        "target": "es2019",
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": false,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "allowUnreachableCode": false,
        "allowSyntheticDefaultImports": true,
        "allowUnusedLabels": false,
        "noEmitHelpers": true,
        "noEmitOnError": false,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noImplicitUseStrict": false,
        "noFallthroughCasesInSwitch": true,
        "types": ["node", "vue", "geojson"],
        "baseUrl": ".",
        "paths": {
            "~/*": ["app/*"],
            "@nativescript/core": ["./node_modules/@akylas/nativescript"],
            "tns-core-modules": ["./node_modules/@akylas/nativescript"],
            "tns-core-modules/*": ["./node_modules/@akylas/nativescript/*"]
        },
        "plugins": [{ "transform": "@nativescript/webpack/dist/transformers/NativeClass", "type": "raw" }]

    },
    "include": ["app/**/*", "references.d.ts"],
    "exclude": ["node_modules", "platforms"]
}
